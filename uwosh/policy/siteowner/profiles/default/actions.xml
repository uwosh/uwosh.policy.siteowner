<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="user" meta_type="CMF Action Category">
  <property name="title"></property>
  <object name="Manage groups" meta_type="CMF Action" insert-before="logout">
   <property name="title">Manage groups</property>
   <property
      name="description">Add/remove groups, add/remove group members</property>
   <property
      name="url_expr">string:${globals_view/navigationRootUrl}/manageGroups</property>
   <property name="icon_expr"></property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="Add Groups"/>
    <element value="Delete Groups"/>
    <element value="Manage Groups"/>
    <element value="View Groups"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
